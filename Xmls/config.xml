		<ArmorThresholdModifier>1</ArmorThresholdModifier>
		<BluntTraumaBonus>0.0</BluntTraumaBonus>
		
		<ArmorPriceModifier>1</ArmorPriceModifier>
		<WeaponPriceModifier>1</WeaponPriceModifier>
		<HorsePriceModifier>0.2</HorsePriceModifier>
		<TradePriceModifier>1</TradePriceModifier>
	</Global>

		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
